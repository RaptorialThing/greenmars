<div class="container">

<div class="row">
<div class="col-6 d-flex justify-content-around">
<div class=" d-flex justify-content-center"><h2>Orders created by me</h2> (wating partners)</div>
</div>
<div class="col-6 align-self-center">
<div class="contatiner">
<div class="row">
<div class="col-12 d-flex justify-content-around">
<%= button_to "New order", new_order_path, method: :get, class: "btn btn-info" %>
</div>
</div>
</div>
</div>
</div>

<div class="row">
<% @orders.each do |order| %>
<div class="col-6 d-flex justify-content-around">
 Currency, Action, Count
</div>
<div class="col-6 d-flex justify-content-around">
<%= link_to "#{order.currency.label} #{order.process} #{order.count}"  , order  %> 
</div>
<% end %>
</div>


<div class="row mt-4">
<div class="col d-flex justify-content-around">
<h2> Other orders that I trade </h2>
</div>
<div class="col d-flex justify-content-around">
Details
</div>
</div>
<% @poses.each do |order| %>
<div class="row mt-2">
<div class="col d-flex justify-content-around">
<% if order.process.to_s == "buy" then %> <div style='color:green'> buy  </div> <% else %> <div style='color:red'> sell  </div> <% end %> <%=  order.count %> <%= order.currency.label %>
</div>
<div class="col d-flex justify-content-around">
<%= button_to "Show", order, method: :get, class: "btn btn-primary" %>
</div>
</div>
<% end %>
